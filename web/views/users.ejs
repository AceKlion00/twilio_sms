<div class="row">
    <div class="col-md-12">
        <div class="panel panel-white">
            <div class="panel-heading">
            </div>
            <div class="panel-body">

                <!-- Modal -->
                <form id="add-row-form" action="javascript:void(0);">
                    <div class="modal fade" id="add-user-modal" tabindex="-1" role="dialog"
                        aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">

                                    <h5 class="modal-title" id="myModalLabel">Add New User</h5>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <input type="text" id="fullname-input" class="form-control"
                                            placeholder="Fullname" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="email" id="email-input" class="form-control" placeholder="Email"
                                            required>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" id="pass1-input" class="form-control"
                                            placeholder="Password" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" id="pass2-input" class="form-control"
                                            placeholder="Re-type Password" required>
                                    </div>

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                    <button type="submit" id="add-user" class="btn btn-success">Add</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- Modal -->
                <form id="change-pass-form" action="javascript:void(0);">
                    <div class="modal fade" id="change-pass-modal" tabindex="-1" role="dialog"
                        aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">

                                    <h5 class="modal-title" id="myModalLabel">Change User's Password</h5>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <input type="password" id="cpass1-input" class="form-control"
                                            placeholder="Password" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" id="cpass2-input" class="form-control"
                                            placeholder="Re-type Password" required>
                                    </div>

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                    <button type="submit" id="change-pass" class="btn btn-success">Add</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <button type="button" class="btn btn-success m-b-sm" data-toggle="modal"
                            data-target="#add-user-modal"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;
                            ADD</button>
                    </div>
                    <div class="card-body">

                        <div class="table-responsive">
                            <table id="users" class="display table" style="width: 100%;">
                                <thead>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>